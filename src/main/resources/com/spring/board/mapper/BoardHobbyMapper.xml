<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.board.mapper.BoardHobbyMapper">

<!-- 동호회 :  -->

	<!-- insert : 동호회-->
	<insert id="bhinsert">
		<selectKey keyProperty="hno" order="BEFORE" resultType="int">
			select hobby_tb_seq.nextval from dual		
		</selectKey>
		insert into hobby_table(hno,hwriter,htitle, hpassword, hcontents,himages)
		values(hobby_tb_seq.nextval,#{hwriter},#{htitle},#{hpassword},#{hcontents},#{himages})
	</insert>
	
	<!--  하나 가져오기  : no 가 일치-->
	<select id="bhread" resultType="com.spring.board.domain.BoardHobbyVO">
		select * from hobby_table where hno=#{hno}
	</select>
	
	<!--  수정 :  내용만 수정, updatedate, no 일치하면 -->
	<update id="bhupdate">
		update hobby_table
		set contents=#{hcontents}, huploaddate=sysdate
		where hno=#{hno}
	</update>
	
	<!-- 삭제 : no, password 일치 -->
	<delete id="bhdelete">
		delete from hobby_table where hno=#{hno} and hpassword=#{hpassword}
	</delete>
	
	<!-- -->
	<delete id="bhdeleteAll">
		delete from hobby_table where hno=#{hno}	
	</delete>

	<!-- 페이지 나누기 적용 -->
	<select id="bhlist" resultType="com.spring.board.domain.BoardHobbyVO">
		<![CDATA[
				select *
				from(select /*+INDEX_DESC(hobby_table hobby_tb_seq)*/
				          rownum rn,hno,hwriter,htitle,hcontents,huploaddate
				     from hobby_table
				     where 
		]]>		
		
		<include refid="boardcommentcriteria"></include>
		     
		<![CDATA[		     
				     
				     rownum <= (#{pageNum}*#{amount}))
				where rn > ((#{pageNum}-1)*#{amount})		
		]]>	
	</select>
	
	<!-- 전체 게시물 수 (검색)-->
	<select id="bhtotalCnt" resultType="int">
		select count(*) from hobby_table 
		where
		
		<include refid="boardcommentcriteria"></include>
		
		 hno>0
	</select>
	
	
	
	<!-- 동적 SQL -->
	<!-- 제목, 내용 검색 -->
	<sql id="boardcommentcriteria">
		<trim prefix="(" suffix=") AND"  prefixOverrides="OR" >
			<foreach collection="typeArr" item='type'>
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type=='C'.toString()">
							contents like '%'||#{keyword}||'%'
						</when>					
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	

</mapper>