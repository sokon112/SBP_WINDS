<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.board.mapper.BoardMapper">

	<!-- 삽입 : bno,nickname,title,contents,password,view 이며 bno의 경우 seq_board 값으로 삽입 (insert)-->
	<insert id="insert">
		<!-- 주로 pk 값을 미리 SQL 쿼리문을 통해서 처리해 두고 특정한 이름으로 결과를 보관 -->
		<selectKey keyProperty="bno" order="BEFORE" resultType="int">
			select board_tb_seq.nextval from dual		
		</selectKey>	
		insert into board_table(bno,nickname,title, views, password, contents)
		values(#{bno},#{nickname},#{title},#{content},#{views},#{password},#{contents})
	</insert>
	
	<!-- 삭제 : bno,password가 일치하면 삭제(delete) -->
	<delete id="delete">
		delete from board_table where bno=#{bno} and password=#{password}	
	</delete>
	
	
	<!-- 수정 : title,content,updatedate,  bno가 일치시(update) -->
	<update id="update">
		update board_table
		set title=#{title},content=#{content},updatedate=sysdate
		where bno=#{bno} and password=#{password}
	</update>
	
	<!-- 전체조회 : (list) 페이지 나누기 전 -->
	<!-- <select id="list" resultType="com.spring.domain.BoardVO">
		select * from spring_board where bno>0 order by bno desc,regdate desc
	</select> -->
	
	<!-- 페이지 나누기 적용 -->
	<select id="list" resultType="com.spring.domain.BoardVO">
		<![CDATA[
				select *
				from(select /*+INDEX_DESC(spring_board pk_spring_board)*/
				          rownum rn,bno,title,writer,regdate,updatedate
				     from SPRING_BOARD
				     where 
		]]>		
		
		<include refid="criteria"></include>
		     
		<![CDATA[		     
				     
				     rownum <= (#{pageNum}*#{amount}))
				where rn > ((#{pageNum}-1)*#{amount})		
		]]>	
	</select>
	
	<!-- 전체 게시물 수 -->
	<select id="totalCnt" resultType="int">
		select count(*) from spring_board 
		where
		
		<include refid="criteria"></include>
		
		 bno>0
	</select>
	
		
	<!-- 특정번호 조회 : bno에 해당하는 게시물 가져오기(read) -->
	<select id="read" resultType="com.spring.domain.BoardVO">
		select * from spring_board where bno=#{bno}
	</select>
	
	
	<!-- 댓글 숫자 수정 : 댓글의 삽입 or 댓글 삭제 시 
	<update id="replyCntUpdate">
		update spring_board set replycnt = replycnt+ #{amount}
		where bno=#{bno}
	</update>
	-->
	
	
	
	
	<!-- 동적 SQL -->
	<sql id="criteria">
		<trim prefix="(" suffix=") AND"  prefixOverrides="OR" >
			<foreach collection="typeArr" item='type'>
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type=='C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type=='W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	











</mapper>