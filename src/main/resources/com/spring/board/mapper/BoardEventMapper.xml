<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.board.mapper.BoardEventMapper">

<!-- 이벤트 :  -->

	<!-- insert : 글 삽입-->
	<insert id="beinsert">
	<selectKey keyProperty="eno" order="BEFORE" resultType="int">
			select event_tb_seq.nextval from dual		
		</selectKey>
		insert into event_table(eno,ewriter,etitle, epassword, econtents)
		values(event_tb_seq.nextval,#{ewriter},#{etitle},#{epassword},#{econtents})</insert>
		
	<!--  하나 가져오기  : no 가 일치-->
	<select id="beread" resultType="com.spring.board.domain.BoardEventVO">
		select * from event_table where eno=#{eno}
	</select>
	
	<!--  수정 : 댓글 내용만 수정, updatedate, sno 일치하면 -->
	<update id="beupdate">
		update event_table
		set econtents=#{econtents}, euploaddate=sysdate
		where eno=#{eno}
	</update>
	
	<!-- 삭제 : no, password 일치 -->
	<delete id="beldelete">
		delete from event_table where eno=#{eno} and epassword=#{epassword}
	</delete>
	
	
	<delete id="bedeleteAll">
		delete from event_table where eno=#{eno}	
	</delete>

	<!-- 페이지 나누기 적용 -->
	<select id="belist" resultType="com.spring.board.domain.BoardEventVO">
		<![CDATA[
				select *
				from(select /*+INDEX_DESC(event_table event_tb_seq)*/
				          rownum rn,eno,ewriter,etitle,econtents,euploaddate
				     from event_table
				     where 
		]]>		
		
		<include refid="boardcommentcriteria"></include>
		     
		<![CDATA[		     
				     
				     rownum <= (#{pageNum}*#{amount}))
				where rn > ((#{pageNum}-1)*#{amount})		
		]]>	
	</select>
	
	<!-- 전체 게시물 수 (검색)-->
	<select id="betotalCnt" resultType="int">
		select count(*) from event_table 
		where
		
		<include refid="boardcommentcriteria"></include>
		
		 eno>0
	</select>
	
	
	
	<!-- 동적 SQL -->
	<!-- 제목, 내용 검색 -->
	<sql id="boardcommentcriteria">
		<trim prefix="(" suffix=") AND"  prefixOverrides="OR" >
			<foreach collection="typeArr" item='type'>
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							etitle like '%'||#{keyword}||'%'
						</when>
						<when test="type=='C'.toString()">
							econtents like '%'||#{keyword}||'%'
						</when>					
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	


</mapper>